<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:onClick="albumPicked"
              android:orientation="vertical"
              android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/album_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/album_cover_image"/>

    <TextView
        android:id="@+id/album_info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#ffff8d"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/album_cover_image"
        android:layout_below="@+id/album_title"/>

    <ImageView
        android:id="@+id/album_cover_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/album_info"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        />
    <!-- android:src="@drawable/no_album_art" -->
</RelativeLayout>
